    ViewBag.Title = "UserCountByMonth";
    Layout = "~/Areas/WebAdmin/Views/Shared/_AdminLayout.cshtml";
}

@{
    ViewBag.Title = "User Count By Month";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var months = @Html.Raw(Json.Encode(ViewBag.Months));
    var userCounts = @Html.Raw(Json.Encode(ViewBag.UserCounts));
}

<div class="container">
    <h2>User Count By Month</h2>
    <canvas id="userCountByMonth"></canvas>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        var months = @Html.Raw(Json.Encode(ViewBag.Months));
        var userCounts = @Html.Raw(Json.Encode(ViewBag.UserCounts));

        var ctx = document.getElementById("userCountByMonth").getContext('2d');
        var chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: months,
                datasets: [{
                    label: 'User Count',
                    data: userCounts,
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>
}
